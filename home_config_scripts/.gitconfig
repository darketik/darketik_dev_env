[user]
	email = darketik@gmail.com
	name = Darketik
	mail = darketik@gmail.com
[credential]
	helper = cache
[core]
	excludesfile = /home/florent/.gitignore
	editor = vim
[push]
	default = simple
#	default = current
[branch]
	autosetuprebase = always
#[color]
#	ui = true
#	status = auto
#	branch = auto
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
	tool = vimdiff
[alias]
	ll = log --graph --oneline --decorate --all
	staged = diff --cached
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
